@model List<WebApplication1.Models.Entities.Person>
@{
    ViewBag.Title = "ListOfPeople";
}

<h2> Список учасників </h2>

<table class="table table-striped">
    <thread>
        <tr>
            <th class="text-center">Ім’я</th>
            <th class="text-center">Вік</th>
            <th class="text-center">#</th>
        </tr>
        </thread>
    <tbody>
        @foreach(var person in Model)
        {
            <tr class="text-center">
                <td>@person.LastName @person.FirstName @person.Patronymic</td>
<td><a>@person.Id</a></td>
                </tr>
        }
</tbody>
</table>


